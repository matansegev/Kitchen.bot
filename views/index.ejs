<%- include("partials/header.ejs"); -%>

  <div class="box" id="heading">
    <h1>Shopping List</h1>
  </div>
  <div class="box">
    <% for(let item of listItems){%>
      <div class="item">
        <form action="/delete" method="post" class="delete-form">
          <input type="hidden" name="deleteItemId" value="<%= item.id %>">
          <button type="submit" class="delete-btn">❌</button>
        </form>
        <p><%= item.title %></p>
      </div>
    <% } %>

    <form class="item" action="/add" method="post">
      <input type="text" name="newItem" placeholder="Add new item..." autocomplete="off" autofocus="true" />
      <button class="add" type="submit">+</button>
    </form>
  </div>

  <div class="navigation-links">
    <% if (listItems.length > 0) { %>
      <form action="/purchase" method="post" class="purchase-form">
        <button type="submit" class="purchase-button">
          I Purchased Everything ✓
        </button>
      </form>
    <% } %>
  </div>

  <%- include("partials/footer.ejs"); -%>
